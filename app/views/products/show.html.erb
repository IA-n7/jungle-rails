<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

    </div>

  </article>

  <% if current_user %>
  <div>
    <%= form_for [@product, @review] do |form| %>

      <% if form.object.errors.any? %>
        <div class="alert alert-danger">
          <strong>The following errors prevented saving:</strong>
          <ul>
            <% form.object.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :rating %>
        <%= form.number_field :rating, min: 0, max: 5, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <% end %>

  <article class="reviews-box">
    <h2 class="reviews-header"> Reviews </h2>
    <div class="row reviews">
      <% @product.reviews.reverse_each do |detail| %>
        <div class="col-sm-8">
          <dl class="dl-horizontal">
            <dt>User</dt>
            <dd><%= detail.user.first_name %> <%= detail.user.last_name %></dd>
            <dt>Rating</dt>
            <dd><%= detail.rating %> / 5</dd>
            <dt>Description</dt>
            <dd><%= detail.description %></dd>
            <% if current_user == detail.user %>
            <dt>Delete Review</dt>

            <% puts"========================================" %>
            <% puts detail.id %>
            <% puts"========================================" %>
            <dd><%= link_to fa_icon('trash'), product_review_url(@product.id, detail.id), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></dd>
            <% end %>
          </dl>

        </div>

      <% end %>
    </div>
  </article>

</section>
